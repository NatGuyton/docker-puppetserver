# All subsequent runs after running the initial provisioning or similar
#    ... low memory version
docker run -d --name puppetserver -h docker-puppetserver -p 8140:8140 -e JAVA_ARGS='-Xms500m -Xmx1g' \
	-v /home/docker/puppetserver/data:/opt/puppetlabs/server/data/puppetserver \
	-v /home/docker/puppetserver/etc:/etc/puppetlabs \
	-v /home/docker/puppetserver/logs:/var/log/puppetlabs/puppetserver \
	guyton/puppetserver 

